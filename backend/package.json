{
  "version": "1.0.0",
  "description": "Using latest JavaScript features on the server",
  "author": "Joshua Mabina <mabinajoshua@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": "8.6.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest --detectOpenHandles --forceExit",
    "start": "node dist/index.js",
    "lint": "./node_modules/eslint/bin/eslint.js src test --fix",
    "build": "npm run lint && mkdir -p dist && babel src -s -D -d dist",
    "dev": "nodemon src/index.js --exec \"npm run test && npm run lint\""
  },
  "keywords": [
    "express",
    "babel",
    "boilerplate",
    "scaffold",
    "es6",
    "es2015",
    "es2016",
    "es2017",
    "jest",
    "eslint"
  ],
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "mongoose": "^5.4.3",
    "mongoose-unique-validator": "^2.0.2",
    "morgan": "^1.9.0",
    "node-env-file": "^0.1.8",
    "nunjucks": "^3.1.6",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg-promise": "^8.7.2",
    "rimraf": "^2.6.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "babel-jest": "^21.2.0",
    "babel-register": "^6.26.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-watch": "^3.1.3",
    "jest": "^23.6.0",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "testMatch": [
      "**/__tests__/*.js?(x)"
    ],
    "testEnvironment": "node",
    "verbose": true
  }
}
